  boot.kernelModules = [ "kvm-intel" ];
  boot.extraModulePackages = [ ];

  fileSystems."/" =
    { device = "none";
      fsType = "tmpfs";
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/0E6D-A776";
      fsType = "vfat";
    };

  fileSystems."/home" =
    { device = "/dev/disk/by-uuid/8dcee91e-6dce-4a33-b971-97843c0e46fe";
      fsType = "btrfs";
      options = [ "subvol=@home" "compress=zstd" ];
